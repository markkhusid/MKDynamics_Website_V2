olumn":1}},"children":[{"type":"text","value":"Program that demonstrates the ","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"F64QHr5c8a"},{"type":"emphasis","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"ASSERT","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"Y7QYbOfKbP"}],"key":"LP41eQjonU"},{"type":"text","value":" statement in C++","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"haS1Ut7TGI"}],"identifier":"program-that-demonstrates-the-assert-statement-in-c","label":"Program that demonstrates the ASSERT statement in C++","html_id":"program-that-demonstrates-the-assert-statement-in-c","implicit":true,"key":"OXLrA4Vnqs"}],"key":"i5FuRMrH4o"},{"type":"block","kind":"notebook-content","children":[{"type":"code","lang":"cpp","value":"// Finding a minimum element in an array slice.\n#include <iostream>\n#include <assert.h>\n\nusing namespace std;\n\nvoid order (int & p, int & q)\n{\n    int temp = p;\n    if (p > q) {\n        p = q;\n        q = temp;\n    }\n}\n\nint place_min(int a[], int size, int lb = 0)\n{\n    int i, min;\n    assert(size >= 0);   // precondition\n\n    for (i = lb; i < lb + size; ++i)\n        order(a[lb], a[i + 1]);\n    return a[lb];\n}\n\nint main()\n{\n    int a[9] = { 6, -9, 99, 3, -14, 9, -33, 8, 11 };\n\n    cout << \"Minimum = \" << place_min(a, 3, 2) << endl;\n    assert(a[2] <= a[3] && a[2] <= a[4]);   // postcondition\n}","key":"yuwxdga32Y"}],"key":"QKeMsIoaI8"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Compile and Execute the Program","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"hNm6d7Af92"}],"identifier":"compile-and-execute-the-program","label":"Compile and Execute the Program","html_id":"compile-and-execute-the-program","implicit":true,"key":"xVce4KUbjl"}],"key":"LTMacGCshV"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"saxk0YJiIR"}],"key":"FDZmpLFhIw"}],"key":"N9PqtV57lT"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"SVrzM1p9hy"},{"type":"outputs","id":"qcu5QleFOk3I72excSlDJ","children":[],"key":"ZvVzlXPEcC"}],"key":"SzSkK6Qk7g"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_3_16_Assertions_and_Program_Correctness\"","key":"sfQIj23Vi4"},{"type":"outputs","id":"Zqz6L094o9e8gRSUpaAa1","children":[],"key":"r2Y7zHHSeD"}],"key":"cENyiKAixr"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"ch_dir_stat = os.chdir(code_dir)","key":"S7Fy6Fo6FZ"},{"type":"outputs","id":"y7aTOGvLTAcn9_UxKjmkF","children":[],"key":"e2SPZqGaDl"}],"key":"xh7Fj2Z6IM"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_command = os.system(\"g++ order.cpp -w -o order\")","key":"idJEcNUaw8"},{"type":"outputs","id":"iEDeR1MUR2W3n4uSs3CYI","children":[],"key":"TPSlSb6OeF"}],"key":"lK7aJvrP7G"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"exec_status = os.system(\"./order\")","key":"M6X9a3sC3R"},{"type":"outputs","id":"zzQfYU6FC2diZ2D22diBP","children":[{"type":"output","jupyter_data":{"name":"stdout","output_type":"stream","text":"Minimum = -14\n"},"children":[],"key":"nX7REgyHLl"}],"key":"GtoSIyl8Bm"}],"key":"rKdfUP