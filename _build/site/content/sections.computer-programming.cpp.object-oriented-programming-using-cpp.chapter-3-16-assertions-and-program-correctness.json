olumn":1}},"children":[{"type":"text","value":"Program that demonstrates the ","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"WXEyB7R6v9"},{"type":"emphasis","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"ASSERT","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"DFhaabdnZ9"}],"key":"IUdX4Ajblf"},{"type":"text","value":" statement in C++","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"grsE16XV1N"}],"identifier":"program-that-demonstrates-the-assert-statement-in-c","label":"Program that demonstrates the ASSERT statement in C++","html_id":"program-that-demonstrates-the-assert-statement-in-c","implicit":true,"key":"yR3QqIFPaz"}],"key":"SvhYPDNgjA"},{"type":"block","kind":"notebook-content","children":[{"type":"code","lang":"cpp","value":"// Finding a minimum element in an array slice.\n#include <iostream>\n#include <assert.h>\n\nusing namespace std;\n\nvoid order (int & p, int & q)\n{\n    int temp = p;\n    if (p > q) {\n        p = q;\n        q = temp;\n    }\n}\n\nint place_min(int a[], int size, int lb = 0)\n{\n    int i, min;\n    assert(size >= 0);   // precondition\n\n    for (i = lb; i < lb + size; ++i)\n        order(a[lb], a[i + 1]);\n    return a[lb];\n}\n\nint main()\n{\n    int a[9] = { 6, -9, 99, 3, -14, 9, -33, 8, 11 };\n\n    cout << \"Minimum = \" << place_min(a, 3, 2) << endl;\n    assert(a[2] <= a[3] && a[2] <= a[4]);   // postcondition\n}","key":"UJhdCemyo1"}],"key":"O3DJ8Dt2Ml"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Compile and Execute the Program","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"WJt9o05X44"}],"identifier":"compile-and-execute-the-program","label":"Compile and Execute the Program","html_id":"compile-and-execute-the-program","implicit":true,"key":"JbJn7s4UGU"}],"key":"Tn9fsMOA9Z"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"alXmhBDL65"}],"key":"gki7y9mWCl"}],"key":"JL0xi1hnjN"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"Og4uYGrCjH"},{"type":"outputs","id":"DSUbzSpBO6JNrzXK8urm6","children":[],"key":"ePvk3MbBXO"}],"key":"rA2nTrvKuw"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_3_16_Assertions_and_Program_Correctness\"","key":"L2LJBIz4aj"},{"type":"outputs","id":"xUl65SQUOL1TYHtnZ30hm","children":[],"key":"jmjKJog75y"}],"key":"t6JZqrg5cU"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"ch_dir_stat = os.chdir(code_dir)","key":"Yt4GtGQYWx"},{"type":"outputs","id":"pZrmiYtHPgT7Is_vSw-q0","children":[],"key":"Ba3RiC6SUp"}],"key":"ZSedYpqY1V"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_command = os.system(\"g++ order.cpp -w -o order\")","key":"qsddeu3zEp"},{"type":"outputs","id":"gyOLZGKmv9rrnHQkQy3cV","children":[],"key":"wLewYpfTIG"}],"key":"Dpluq4sg40"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"exec_status = os.system(\"./order\")","key":"sLlRvgY7Lt"},{"type":"outputs","id":"8BJRwLMF9rgeyAOLQFnah","children":[{"type":"output","jupyter_data":{"name":"stdout","output_type":"stream","text":"Minimum = -14\n"},"children":[],"key":"Y98i3bJ8JS"}],"key":"slChMvRLu6"}],"key":"iIdsWq