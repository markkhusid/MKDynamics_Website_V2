olumn":1}},"children":[{"type":"text","value":"Program that demonstrates the ","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"VAPRrBqS1a"},{"type":"emphasis","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"ASSERT","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"b1lXefhYiC"}],"key":"zKEH08tcL2"},{"type":"text","value":" statement in C++","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"EEVgkXWcCr"}],"identifier":"program-that-demonstrates-the-assert-statement-in-c","label":"Program that demonstrates the ASSERT statement in C++","html_id":"program-that-demonstrates-the-assert-statement-in-c","implicit":true,"key":"QNI5V6VwAc"}],"key":"KkrKw465yW"},{"type":"block","kind":"notebook-content","children":[{"type":"code","lang":"cpp","value":"// Finding a minimum element in an array slice.\n#include <iostream>\n#include <assert.h>\n\nusing namespace std;\n\nvoid order (int & p, int & q)\n{\n    int temp = p;\n    if (p > q) {\n        p = q;\n        q = temp;\n    }\n}\n\nint place_min(int a[], int size, int lb = 0)\n{\n    int i, min;\n    assert(size >= 0);   // precondition\n\n    for (i = lb; i < lb + size; ++i)\n        order(a[lb], a[i + 1]);\n    return a[lb];\n}\n\nint main()\n{\n    int a[9] = { 6, -9, 99, 3, -14, 9, -33, 8, 11 };\n\n    cout << \"Minimum = \" << place_min(a, 3, 2) << endl;\n    assert(a[2] <= a[3] && a[2] <= a[4]);   // postcondition\n}","key":"egjVqp2AmK"}],"key":"FTYP8ubwTJ"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Compile and Execute the Program","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"YjEnGZdSSG"}],"identifier":"compile-and-execute-the-program","label":"Compile and Execute the Program","html_id":"compile-and-execute-the-program","implicit":true,"key":"PRiU3MCzeU"}],"key":"VBlC2Jar3O"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"AkbuS0Phrk"}],"key":"shk5PiJsaR"}],"key":"wxAMKXcLw2"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"FlzTeQftfn"},{"type":"outputs","id":"3eoUmifR6ZPGXOBOLGDx9","children":[],"key":"LPPQOodTAa"}],"key":"ExiaoQU6Ls"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_3_16_Assertions_and_Program_Correctness\"","key":"dHsrvFoqJo"},{"type":"outputs","id":"_fuFn5o-IFk8NkwAm7Jsv","children":[],"key":"DWVfVN0dlQ"}],"key":"Wrdx0zdYNM"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"ch_dir_stat = os.chdir(code_dir)","key":"qJ3XpuFTqd"},{"type":"outputs","id":"5qZLCafvv3JaoHDlMdJZh","children":[],"key":"QlLCjchc8M"}],"key":"BQE7n1BJL2"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_command = os.system(\"g++ order.cpp -w -o order\")","key":"NiXuTJT4z1"},{"type":"outputs","id":"fFawW-D6rH1CU91_oyzCc","children":[],"key":"HcMXQWs3Yh"}],"key":"JNwnyWpFse"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"exec_status = os.system(\"./order\")","key":"t9mEA4PhBP"},{"type":"outputs","id":"_1yXGEEklSA5UzqcP6z8S","children":[{"type":"output","jupyter_data":{"name":"stdout","output_type":"stream","text":"Minimum = -14\n"},"children":[],"key":"Aja7K3i3uf"}],"key":"Ti6H6tyfC4"}],"key":"EbhB2v