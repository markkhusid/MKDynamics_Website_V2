olumn":1}},"children":[{"type":"text","value":"Program that demonstrates the ","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"YIayMer9O2"},{"type":"emphasis","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"ASSERT","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"TvkPjnmsru"}],"key":"JpgBe6MtDQ"},{"type":"text","value":" statement in C++","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"kYGdFzLAt8"}],"identifier":"program-that-demonstrates-the-assert-statement-in-c","label":"Program that demonstrates the ASSERT statement in C++","html_id":"program-that-demonstrates-the-assert-statement-in-c","implicit":true,"key":"CjceQVoBbT"}],"key":"SiYI9SbEbq"},{"type":"block","kind":"notebook-content","children":[{"type":"code","lang":"cpp","value":"// Finding a minimum element in an array slice.\n#include <iostream>\n#include <assert.h>\n\nusing namespace std;\n\nvoid order (int & p, int & q)\n{\n    int temp = p;\n    if (p > q) {\n        p = q;\n        q = temp;\n    }\n}\n\nint place_min(int a[], int size, int lb = 0)\n{\n    int i, min;\n    assert(size >= 0);   // precondition\n\n    for (i = lb; i < lb + size; ++i)\n        order(a[lb], a[i + 1]);\n    return a[lb];\n}\n\nint main()\n{\n    int a[9] = { 6, -9, 99, 3, -14, 9, -33, 8, 11 };\n\n    cout << \"Minimum = \" << place_min(a, 3, 2) << endl;\n    assert(a[2] <= a[3] && a[2] <= a[4]);   // postcondition\n}","key":"wzXkqCoePu"}],"key":"muYYeXletr"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Compile and Execute the Program","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"LIx0BAwIgC"}],"identifier":"compile-and-execute-the-program","label":"Compile and Execute the Program","html_id":"compile-and-execute-the-program","implicit":true,"key":"SYe2CNDDsJ"}],"key":"k7UJuWN4TZ"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"KrxAQpfPOl"}],"key":"Yh2KPSkHkH"}],"key":"RZXcE9XANq"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"MpwNQO9ZQG"},{"type":"outputs","id":"lwc-nvjXRvtZwK8H7KNdK","children":[],"key":"bxCQjdcJFM"}],"key":"szKzLLS4nO"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_3_16_Assertions_and_Program_Correctness\"","key":"axI2C6CP7J"},{"type":"outputs","id":"OylwmhMZAnuLGKEQZKq_x","children":[],"key":"EbEFfxKtWy"}],"key":"vFVirIJCjK"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"ch_dir_stat = os.chdir(code_dir)","key":"QY1xgRFSGV"},{"type":"outputs","id":"IQL3hTKqWu-dQViLmtDVp","children":[],"key":"DqACLvKoq2"}],"key":"L4JunQ6KNu"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_command = os.system(\"g++ order.cpp -w -o order\")","key":"NrqD3sI9MZ"},{"type":"outputs","id":"_kRMvrLPhgQ7NfppYvmm9","children":[],"key":"uH5JULqIcj"}],"key":"BlHwJwsajB"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"exec_status = os.system(\"./order\")","key":"WZXtlIbaA8"},{"type":"outputs","id":"NSfuxtfC8smoW6V5_wJIV","children":[{"type":"output","jupyter_data":{"name":"stdout","output_type":"stream","text":"Minimum = -14\n"},"children":[],"key":"P1ryzUsOPY"}],"key":"pWoBiEDVoQ"}],"key":"MxfNtf