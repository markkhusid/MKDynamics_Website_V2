olumn":1}},"children":[{"type":"text","value":"Program that demonstrates the ","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"z9QmbUGmvS"},{"type":"emphasis","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"ASSERT","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"rlcvrRYxtI"}],"key":"uGlmhuoNk2"},{"type":"text","value":" statement in C++","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"hlMQ46YtYo"}],"identifier":"program-that-demonstrates-the-assert-statement-in-c","label":"Program that demonstrates the ASSERT statement in C++","html_id":"program-that-demonstrates-the-assert-statement-in-c","implicit":true,"key":"kk409i1j0I"}],"key":"F4aiDlrm1u"},{"type":"block","kind":"notebook-content","children":[{"type":"code","lang":"cpp","value":"// Finding a minimum element in an array slice.\n#include <iostream>\n#include <assert.h>\n\nusing namespace std;\n\nvoid order (int & p, int & q)\n{\n    int temp = p;\n    if (p > q) {\n        p = q;\n        q = temp;\n    }\n}\n\nint place_min(int a[], int size, int lb = 0)\n{\n    int i, min;\n    assert(size >= 0);   // precondition\n\n    for (i = lb; i < lb + size; ++i)\n        order(a[lb], a[i + 1]);\n    return a[lb];\n}\n\nint main()\n{\n    int a[9] = { 6, -9, 99, 3, -14, 9, -33, 8, 11 };\n\n    cout << \"Minimum = \" << place_min(a, 3, 2) << endl;\n    assert(a[2] <= a[3] && a[2] <= a[4]);   // postcondition\n}","key":"jOiUN5RPzr"}],"key":"a9zQaMYKaA"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Compile and Execute the Program","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"bXJSsYqOGp"}],"identifier":"compile-and-execute-the-program","label":"Compile and Execute the Program","html_id":"compile-and-execute-the-program","implicit":true,"key":"D1NmghNUDi"}],"key":"VIJx7eEkYg"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"SkFdrmoQpg"}],"key":"HRY6TSO05V"}],"key":"NeH7QpdggJ"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"qvFVDQgnBp"},{"type":"outputs","id":"hf-N5Kl4E_ZM2R-djSxzT","children":[],"key":"IzeJrVXFX4"}],"key":"ridZw4cdiV"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_3_16_Assertions_and_Program_Correctness\"","key":"wNLpugeFLt"},{"type":"outputs","id":"0SHZ8x0gmLLDvp7tkZ47c","children":[],"key":"Bb7JEs7ECo"}],"key":"zggpruXtTM"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"ch_dir_stat = os.chdir(code_dir)","key":"KDKUTN5W4l"},{"type":"outputs","id":"EJuqK0cvgBpbpvJNd6DFC","children":[],"key":"mw9UgLZnaf"}],"key":"cQixbAOKtT"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_command = os.system(\"g++ order.cpp -w -o order\")","key":"UklmogBHgI"},{"type":"outputs","id":"ypqzsHANnjTV5dMJrD-T0","children":[],"key":"VpWJ4qEKU0"}],"key":"Fcjw5ZsuyM"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"exec_status = os.system(\"./order\")","key":"USsMB0zX7G"},{"type":"outputs","id":"NQQ39vBP1rF3RedN8-Hxk","children":[{"type":"output","jupyter_data":{"name":"stdout","output_type":"stream","text":"Minimum = -14\n"},"children":[],"key":"zSuRrFOIUa"}],"key":"vAM6mYrFok"}],"key":"fcSYv9