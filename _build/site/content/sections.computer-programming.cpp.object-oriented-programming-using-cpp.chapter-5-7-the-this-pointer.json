 this pointer\n\nclass c_pair {\n    public:\n        void init(char b) { c2 = 1 + (c1 = b); }\n        c_pair increment() { c1++; c2++; return (*this); }\n        c_pair* where_am_I() { return this; }\n        void print() { cout << c1 << c2 << '\\t'; }\n    private:\n        char c1, c2;\n};\n\nint main()\n{\n    c_pair a, b;\n\n    a.init('A');\n    a.print();\n    cout << \" is at \" << a.where_am_I() << endl;\n\n    b.init('B');\n    b.print();\n    cout << \" is at \" << b.where_am_I() << endl;\n    b.increment().print();\n}","position":{"start":{"line":1,"column":1},"end":{"line":31,"column":1}},"key":"QMupPQtFUZ"}],"key":"SLZCwgX93s"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"Ju7ZUK2uL2"}],"key":"b6KzNIOHcI"}],"key":"vktyaabl2M"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"rWBQGtdhbo"},{"type":"outputs","id":"eWxn9heAAwkVDBVrywq2d","children":[],"key":"uZohslU8fT"}],"key":"RIWkVbxQI9"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_5_7_The_this_Pointer\"","key":"xdaiUnelk7"},{"type":"outputs","id":"SIkEDA0DkhE1KyI_LtySJ","children":[],"key":"IdGic3KcaV"}],"key":"MnH92Yx1YD"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"G91T18QQJu"},{"type":"outputs","id":"i6smrCVQd6zEtpLyxohSk","children":[],"key":"YqObKvalHu"}],"key":"WxpD3FGKnL"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_command = os.system(\"g