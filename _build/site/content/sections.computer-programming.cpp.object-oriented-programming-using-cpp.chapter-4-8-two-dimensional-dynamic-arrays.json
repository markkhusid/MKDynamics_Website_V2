e = 0;\n}\n\ndouble find_max(const twod & m)\n{\n    int i, j;\n    double max = m.base[0][0];\n\n    for (i = 0; i < m.column_size; ++i)\n        for (j = 0; j < m.row_size; ++j)\n            if (m.base[i][j] > max)\n                max = m.base[i][j];\n    return (max);\n}\n\nint main ()\n{\n    twod    a, b;\n    int     i, j;\n\n    allocate(2, 3, a);\n    allocate(4, 6, b);\n\n    for (i = 0; i < a.column_size; ++i)\n        for (j = 0; j < b.row_size; ++j)\n            a.base[i][j] = i * j;\n    \n    for (i = 0; i < b.column_size; ++i)\n        for (j = 0; j < b.row_size; ++j)\n            b.base[i][j] = i * j;\n\n    cout << find_max(a) << \" max in size 2 * 3\\n\";\n    cout << find_max(b) << \" max in size 4 * 6\\n\";\n}","position":{"start":{"line":1,"column":1},"end":{"line":60,"column":1}},"key":"bZvxxgqsRg"}],"key":"Y1bJJRtv7r"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"FbEuv5KMRD"}],"key":"oQeei4zhQr"}],"key":"KAB3hZuopV"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"sU9zjJXHN3"},{"type":"outputs","id":"FVG_eZwg24__XIqOYLBep","children":[],"key":"amTSKGR6fv"}],"key":"n47Bj0eLje"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_4_8_Two_Dimensional_Dynamic_Arrays\"","key":"FLX8Rkp2FJ"},{"type":"outputs","id":"R-_iQjAvZrlv15Smyg9yR","children":[],"key":"dgYqa3KkF7"}],"key":"GEB1nPpbZR"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"ivA4TQsF14"},{"type":"outputs","id"