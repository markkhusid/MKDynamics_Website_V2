e = 0;\n}\n\ndouble find_max(const twod & m)\n{\n    int i, j;\n    double max = m.base[0][0];\n\n    for (i = 0; i < m.column_size; ++i)\n        for (j = 0; j < m.row_size; ++j)\n            if (m.base[i][j] > max)\n                max = m.base[i][j];\n    return (max);\n}\n\nint main ()\n{\n    twod    a, b;\n    int     i, j;\n\n    allocate(2, 3, a);\n    allocate(4, 6, b);\n\n    for (i = 0; i < a.column_size; ++i)\n        for (j = 0; j < b.row_size; ++j)\n            a.base[i][j] = i * j;\n    \n    for (i = 0; i < b.column_size; ++i)\n        for (j = 0; j < b.row_size; ++j)\n            b.base[i][j] = i * j;\n\n    cout << find_max(a) << \" max in size 2 * 3\\n\";\n    cout << find_max(b) << \" max in size 4 * 6\\n\";\n}","position":{"start":{"line":1,"column":1},"end":{"line":60,"column":1}},"key":"T9zkhonNUP"}],"key":"e3QwTT7I5r"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"BC5o2UxRCb"}],"key":"AdyG2wyjr0"}],"key":"Fb88OgU87u"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"y8l37G5elN"},{"type":"outputs","id":"9nYkunK32497shyOVsRbR","children":[],"key":"A75rWM3HbY"}],"key":"GaqY5LyQu6"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_4_8_Two_Dimensional_Dynamic_Arrays\"","key":"lsHlR8Khg1"},{"type":"outputs","id":"CJgMdGvvpv37-HCzktBzS","children":[],"key":"YPOUqcXKfR"}],"key":"ZPGDtgmrzQ"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"YmFaxRgy6q"},{"type":"outputs","id"