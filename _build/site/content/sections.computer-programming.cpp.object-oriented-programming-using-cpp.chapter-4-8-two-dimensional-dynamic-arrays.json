e = 0;\n}\n\ndouble find_max(const twod & m)\n{\n    int i, j;\n    double max = m.base[0][0];\n\n    for (i = 0; i < m.column_size; ++i)\n        for (j = 0; j < m.row_size; ++j)\n            if (m.base[i][j] > max)\n                max = m.base[i][j];\n    return (max);\n}\n\nint main ()\n{\n    twod    a, b;\n    int     i, j;\n\n    allocate(2, 3, a);\n    allocate(4, 6, b);\n\n    for (i = 0; i < a.column_size; ++i)\n        for (j = 0; j < b.row_size; ++j)\n            a.base[i][j] = i * j;\n    \n    for (i = 0; i < b.column_size; ++i)\n        for (j = 0; j < b.row_size; ++j)\n            b.base[i][j] = i * j;\n\n    cout << find_max(a) << \" max in size 2 * 3\\n\";\n    cout << find_max(b) << \" max in size 4 * 6\\n\";\n}","position":{"start":{"line":1,"column":1},"end":{"line":60,"column":1}},"key":"HWKq9T0pxP"}],"key":"pfLYisrkzz"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"khCRjRepU8"}],"key":"sILTDAOTgP"}],"key":"T21fGr8W1q"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"kmcTcACcce"},{"type":"outputs","id":"6xde2XmTthg8vmJ0nHo47","children":[],"key":"N046M32VMJ"}],"key":"KwlpVu4mlt"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_4_8_Two_Dimensional_Dynamic_Arrays\"","key":"oNS7dW8hDK"},{"type":"outputs","id":"_OxKZYZJYCUNc2aFJDI5R","children":[],"key":"UxQ7AvVBJH"}],"key":"IaH716vjwG"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"P6CayP6kVw"},{"type":"outputs","id"