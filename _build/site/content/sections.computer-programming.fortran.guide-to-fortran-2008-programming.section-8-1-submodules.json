ogram ****\"\n\n          print *\n          write (*, '(a)') \"Coordinates.....\"\n          write (*, '(a, f15.1)') \"Y2: \", line_1%y2\n          write (*, '(a, f15.1)') \"Y1: \", line_1%y1\n          write (*, '(a, f15.1)') \"X2: \", line_1%x2\n          write (*, '(a, f15.1)') \"X1: \", line_1%x1\n\n          print *\n          write (*, '(a, f10.4)') \"The line length is -> \", line_1%length()\n\nend program submod","position":{"start":{"line":1,"column":1},"end":{"line":52,"column":1}},"key":"fSwdMMIA0D"}],"key":"NCBMUZVVcL"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"bPmiWWiuhx"}],"key":"RICi5Vebhj"}],"key":"o6hLCJit2y"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"itrjYq8x65"},{"type":"outputs","id":"aOfA75r_MO7gc4INCEnk2","children":[],"key":"nabFHCPUAG"}],"key":"kTWHoaQLxb"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_8_1_Submodules\"","key":"yLS0YVdS4t"},{"type":"outputs","id":"mGtkZEoqG8Tt8zt6AK6IJ","children":[],"key":"qcqOxxwNHR"}],"key":"jIRoYlIjsG"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"ksuFhELJMd"},{"type":"outputs","id":"gxjEjKWIdmHLoCpPa_a4C","children":[],"key":"MUJZR8zVoR"}],"key":"ipZnPSPxkt"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"lBUY32MeR9"},{"type":"outputs","id":"-xa0-M3t2RNmomUghF0dM","children":[],"key":"Rq