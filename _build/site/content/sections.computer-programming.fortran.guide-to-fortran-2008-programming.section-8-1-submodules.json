ogram ****\"\n\n          print *\n          write (*, '(a)') \"Coordinates.....\"\n          write (*, '(a, f15.1)') \"Y2: \", line_1%y2\n          write (*, '(a, f15.1)') \"Y1: \", line_1%y1\n          write (*, '(a, f15.1)') \"X2: \", line_1%x2\n          write (*, '(a, f15.1)') \"X1: \", line_1%x1\n\n          print *\n          write (*, '(a, f10.4)') \"The line length is -> \", line_1%length()\n\nend program submod","position":{"start":{"line":1,"column":1},"end":{"line":52,"column":1}},"key":"kFal9cy2Pn"}],"key":"DX24lATD5j"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"OGbOsLiYLu"}],"key":"S2I4OH18fa"}],"key":"gjpoItW4Ls"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"DsTzpMjsj5"},{"type":"outputs","id":"Ldx7OTiqaIqgkqnMXx7RI","children":[],"key":"f3ExjGb87Y"}],"key":"cCgd0aL88l"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_8_1_Submodules\"","key":"SC5lxvQvDu"},{"type":"outputs","id":"2SRNWICY84tvUHm1WOeQX","children":[],"key":"UkYGRCpM1n"}],"key":"AFhnM63l18"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"rVT3pHQSkL"},{"type":"outputs","id":"pbi9NDGh8ndvsFCGpvJOq","children":[],"key":"dI3gDT1v4u"}],"key":"eepmOTv8bA"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"jLXInj5VPY"},{"type":"outputs","id":"8Z-MVcaNspTrhD3NMPpAG","children":[],"key":"fH