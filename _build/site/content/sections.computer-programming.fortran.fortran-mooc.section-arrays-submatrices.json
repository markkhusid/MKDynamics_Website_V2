     \n  \n  print *, \"A_array contains: \", A_array\n\n  print *, \"A matrix contains: \"\n  \n  do i = 1, size(A, 1)\n    print *, A(i, :)\n  end do\n\n  print *\n  print *, \"Row 2 contains: \"\n  print *, A(2, :)\n  print *, \"Column 3 contains: \"\n  print *, A(:, 3)\n  print '(A, I0)', 'rank = ', rank(A(2, :))\n  print '(A, I0)', 'shape = ', shape(A(2, :))\nend program submatrices","position":{"start":{"line":1,"column":1},"end":{"line":34,"column":1}},"key":"TnVv1XN8b5"}],"key":"CdjDjBJErA"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"sF5syU7f0r"}],"key":"JTeHsb6go2"}],"key":"OscEOUfR4w"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Build the Program using FPM (Fortran Package Manager)","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"M1sJySrvC7"}],"identifier":"build-the-program-using-fpm-fortran-package-manager","label":"Build the Program using FPM (Fortran Package Manager)","html_id":"build-the-program-using-fpm-fortran-package-manager","implicit":true,"key":"KR28pCOO0X"}],"key":"BxE3wygKP6"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"koUzMjItF6"},{"type":"outputs","id":"MsMTSNwW-jl5ENMRvcsAk","children":[],"key":"pOmskMPqjG"}],"key":"UInM2LWqg4"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Submatrices\"","key":"LwdQAyE19q"},{"type":"outputs","id":"O5JvDGgTbb31E8EUenq8i",