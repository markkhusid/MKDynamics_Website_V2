   write (*,'(a)') \"[*] The matrix X\"\n    call write_matrix(X)\n\n    write (*,*)\n\n    write (*,'(a)') \"[*] Begin findloc call...\"\n    write (*,'(a)') \"findloc( X > 0, T )\"\n    write (*,'(a, 2i2, a)')  \"The first element where (i,j) > 0 is: (\", &\n        findloc( X > 0, T ), &\n        \") in column major order.\"            ! = [ 2, 1 ]\n\n    contains\n\n        subroutine write_matrix(a)\n            real, dimension(:,:), intent(in) :: a\n            integer :: i, j\n            do i = lbound(a,1), ubound(a,1)\n                write (*,*) (a(i,j), j = lbound(a,2), ubound(a,2))\n            end do\n        end subroutine write_matrix\n\nend program find_loc","position":{"start":{"line":1,"column":1},"end":{"line":39,"column":1}},"key":"Fx0D5yQR52"}],"key":"EnCkrsh8ro"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"Qehtxv5Kl1"}],"key":"AmKeRjie8t"}],"key":"Y7KoWcnso2"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"SHpqwkcs6O"},{"type":"outputs","id":"F5IyzqCg5BI7hZrD3baEY","children":[],"key":"X0lbZj2QNV"}],"key":"vOXpoVwKqH"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_8_8_Findloc_Function\"","key":"LikxRjRHjE"},{"type":"outputs","id":"P4b2BBsLXG6hmdRv-aPqz","children":[],"key":"FOE5jEmrR8"}],"key":"qvoSrPclz5"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"FX85um2m1D"},{"type":"outputs","id":"MwSe2dw9UB3Xu7Aagk0Hs","children":[],"key":"REd8hjNQze"}],"key":"NO