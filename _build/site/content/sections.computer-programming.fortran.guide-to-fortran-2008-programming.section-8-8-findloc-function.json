   write (*,'(a)') \"[*] The matrix X\"\n    call write_matrix(X)\n\n    write (*,*)\n\n    write (*,'(a)') \"[*] Begin findloc call...\"\n    write (*,'(a)') \"findloc( X > 0, T )\"\n    write (*,'(a, 2i2, a)')  \"The first element where (i,j) > 0 is: (\", &\n        findloc( X > 0, T ), &\n        \") in column major order.\"            ! = [ 2, 1 ]\n\n    contains\n\n        subroutine write_matrix(a)\n            real, dimension(:,:), intent(in) :: a\n            integer :: i, j\n            do i = lbound(a,1), ubound(a,1)\n                write (*,*) (a(i,j), j = lbound(a,2), ubound(a,2))\n            end do\n        end subroutine write_matrix\n\nend program find_loc","position":{"start":{"line":1,"column":1},"end":{"line":39,"column":1}},"key":"FUO3zB1fKW"}],"key":"ylLfp948wC"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"OV94HmrMMo"}],"key":"g7OyN4C36f"}],"key":"rC4rBhcUiL"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"Ak7qxKVKxx"},{"type":"outputs","id":"LOWD0OqGNl99I8dV7YdoG","children":[],"key":"nd46dwHnmY"}],"key":"svKccax6S7"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_8_8_Findloc_Function\"","key":"UE3rRAVSv5"},{"type":"outputs","id":"2Wg9ZVJSbYDYtQZtY08Sw","children":[],"key":"HxEW2nmeOw"}],"key":"ntnfiBESFr"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"NPG4PFnpI5"},{"type":"outputs","id":"qTNcMjvmMB5HVQKrW5Yh_","children":[],"key":"VvdRNTCNqz"}],"key":"On