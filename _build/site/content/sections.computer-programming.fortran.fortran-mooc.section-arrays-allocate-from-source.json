 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"j1pK0SHhsl"}],"key":"oxWOlTTB6E"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"CuGT4eqp6v"}],"key":"j9ayWMbz32"}],"key":"n7iIRZ93Lv"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"RCVklaj8xc"},{"type":"outputs","id":"0u1TPUXtMbV8ERBB7EqTu","children":[],"key":"SmSHK4bHvg"}],"key":"n77I6y1g3t"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"cFvX3CklMg"},{"type":"outputs","id":"fQyRbdecxxuVq6CMdlYC2","children":[],"key":"CUAUOsk2uE"}],"key":"scc9szgWLN"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"UDzr1ytLW3"},{"type":"outputs","id":"o20tvcsjy0btKGrkuiFhR","children":[],"key":"SH87ho2ip3"}],"key":"p57k0ZgxWo"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"zJdri68k82"},{"type":"outputs","id":"eV