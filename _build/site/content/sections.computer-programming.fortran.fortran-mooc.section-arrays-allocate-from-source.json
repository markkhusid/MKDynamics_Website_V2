 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"IoPnqLm88c"}],"key":"bgWGqbKxAg"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"QLjuqpabo7"}],"key":"CnNuJVOYsV"}],"key":"aSvHWscEz2"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"zhEH2Oh0UW"},{"type":"outputs","id":"y81IrH_Owx3-3Qquh8dtL","children":[],"key":"RBBUi4mTRP"}],"key":"eEoltw8W4s"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"UggbXPEjH5"},{"type":"outputs","id":"ae8O1cSOt3vXXF3zPKt4f","children":[],"key":"cbZ4DOpGgY"}],"key":"dBjpLnMB0V"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"rZfiL6QSZA"},{"type":"outputs","id":"czKAGoPJ6XBEOajKCHWPU","children":[],"key":"cQCgkr1dik"}],"key":"T70DjxolVw"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"typjg1ZIcI"},{"type":"outputs","id":"Aw