 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"Iik80Gmj5F"}],"key":"vctmttD59O"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"DKowxJhG2u"}],"key":"bR8LM3eBhz"}],"key":"GmOenr3BV5"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"uekB9J5j0J"},{"type":"outputs","id":"CCMl5OZHLZnycti0SawdF","children":[],"key":"rgVqtcheXz"}],"key":"CL4erASNPs"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"DhOgd59wp9"},{"type":"outputs","id":"6HZPX5G76z_rWhEeNlYJz","children":[],"key":"e657s7J7Ki"}],"key":"pFyq0u3j1q"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"d6e0w8gofE"},{"type":"outputs","id":"fOuHVuY9VMuTe7wO9HAX7","children":[],"key":"afDTXJPm4b"}],"key":"n1NcJ3Fd1S"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"yXcbxuo3V9"},{"type":"outputs","id":"GN