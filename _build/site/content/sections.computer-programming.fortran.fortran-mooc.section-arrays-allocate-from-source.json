 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"o2TzgH1wFe"}],"key":"sgTk3HdTbx"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"E5eickqx8G"}],"key":"i67BE8u85S"}],"key":"vRZRSHnlSq"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"VThm2HxV2Q"},{"type":"outputs","id":"gahl6yWPouqXweoovhI_c","children":[],"key":"BSVJk4B9Nd"}],"key":"PwgOopJia4"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"bumfzScEJy"},{"type":"outputs","id":"3tw1HrcYRgXm_EeDlw5p5","children":[],"key":"GhECZYyVAm"}],"key":"XjalnjnzBe"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"y0XtG2u6tS"},{"type":"outputs","id":"lHdVuRlGiRnpUODfAyrfH","children":[],"key":"keNmoPg52Z"}],"key":"AycxxW2Vm1"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"n0KMxkOl9l"},{"type":"outputs","id":"x2