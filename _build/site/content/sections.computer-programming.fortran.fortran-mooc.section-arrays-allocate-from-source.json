 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"tgTcabzRll"}],"key":"bYHmWtzrMf"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"OwaUjZ22ka"}],"key":"AL7QvtLueX"}],"key":"SrAJLotA8X"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"HjbPxZVTna"},{"type":"outputs","id":"kpbejKKQdv3S5LmfzCpJd","children":[],"key":"bdE3JTHAW2"}],"key":"Swm178zTCv"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"nKqkUT9mVi"},{"type":"outputs","id":"obcwmQj_eqQkpIVrUJZ7b","children":[],"key":"tGznoKbP8h"}],"key":"kPAdOn8Ztd"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"w0jBj3nflZ"},{"type":"outputs","id":"vIwUzh8O5PWKv37xURu-r","children":[],"key":"gPwOpwJNSD"}],"key":"rLlqMwh4nY"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"vhY6qpOwv5"},{"type":"outputs","id":"Zo