 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"CydlVYuZjH"}],"key":"sddrCGs8Sy"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"ITAmsIkc9w"}],"key":"yJwS0WkCkI"}],"key":"rIwMyoPaiS"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"X7effp1cjp"},{"type":"outputs","id":"l2kYE1baRIT4opwRD-XnK","children":[],"key":"z7uXVGOXse"}],"key":"Ip8btaJRzF"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"jCz0Pxf9Vf"},{"type":"outputs","id":"xRQvi5a4Ba9vQIGqvnm6-","children":[],"key":"IIxILeNRfK"}],"key":"aALflgbSUZ"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"k4IT2k36xf"},{"type":"outputs","id":"vX1bafpEwFqBhg3Ksr0Os","children":[],"key":"YcMZsm8Ugk"}],"key":"FDya4OuVms"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"eV6XCz15au"},{"type":"outputs","id":"dh