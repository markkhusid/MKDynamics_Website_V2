 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"A3DTpa7BIE"}],"key":"N0bsXrGkxD"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"kNxYNgarE4"}],"key":"l3Pdqi7N1M"}],"key":"A7ZE91yciP"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"WYaHrgp9SS"},{"type":"outputs","id":"uOLguAKyg4CdDTozJkDDp","children":[],"key":"MVyzvBmEWt"}],"key":"c1IHN28ceg"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"fAwJbxtWxu"},{"type":"outputs","id":"bDU35ZLRrBlC6Cpt_st-o","children":[],"key":"mONDLurJbX"}],"key":"KsyMNNeC9o"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"nkNwX99LYu"},{"type":"outputs","id":"2JzEFMe0Ise998p1w_K-E","children":[],"key":"VlkEVGCLSY"}],"key":"krUCTX8jDH"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"YeecpYvOj5"},{"type":"outputs","id":"-4