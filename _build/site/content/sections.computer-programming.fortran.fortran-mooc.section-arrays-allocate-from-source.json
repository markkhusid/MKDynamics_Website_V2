 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"vIFHshsvXT"}],"key":"Ol46BTEh0y"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"PRTW6rzNGr"}],"key":"Y3A1nByETK"}],"key":"ReFYUGhRUE"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"HIvv0XV4uf"},{"type":"outputs","id":"1AT3BaiL-kQmpqWEqJMQC","children":[],"key":"pjV6R8K9lI"}],"key":"plE15rQrwh"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"uwENjOJJdH"},{"type":"outputs","id":"hmpA38HrO_ZgjcbCh044X","children":[],"key":"WDTvTbUIgE"}],"key":"QvvVu6KgHV"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"gf5HvhulyW"},{"type":"outputs","id":"5OdzT7YE47umNl1kctjFw","children":[],"key":"px8CQosHlx"}],"key":"aPzW5jFMkt"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"hbW9ui7aDb"},{"type":"outputs","id":"qg