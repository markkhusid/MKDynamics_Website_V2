ortran-MOOC/tree/master/source_code/arrays","error":true,"key":"pnLVJSPsvA"}],"key":"tDGtSTQLc8"}],"key":"ZdtumyFvsq"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"This program demonstrates allocating an array from a source array.","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"brizzClACK"}],"identifier":"this-program-demonstrates-allocating-an-array-from-a-source-array","label":"This program demonstrates allocating an array from a source array.","html_id":"this-program-demonstrates-allocating-an-array-from-a-source-array","implicit":true,"key":"oj7KXD733W"}],"key":"L7KBbvfMxp"},{"type":"block","kind":"notebook-content","children":[{"type":"code","lang":"fortran","value":"program allocate_from_source\n    use, intrinsic :: iso_fortran_env, only : error_unit\n    implicit none\n    integer, dimension(3, 2) :: A\n    integer, dimension(:, :), allocatable :: B\n    integer :: i, status\n\n    A = reshape([ (i, i=1, size(A)) ], shape(A))\n    allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"QyYrKvNeNl"}],"key":"hLttjnQDqE"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end