 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"Xxs8dNw1CR"}],"key":"Rh3BWVC8W3"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"mAGZGMcImj"}],"key":"trj6LOyClz"}],"key":"xqGbDsLlLG"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"cr8mwShsly"},{"type":"outputs","id":"Ldlh-ehrZ8vP2REGXCUH4","children":[],"key":"lxosgiy1a3"}],"key":"BW6lLyDg8w"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"oXSgrYXV6Y"},{"type":"outputs","id":"ZA93Og4Y--4oDYvjg9WuF","children":[],"key":"AKJXYVFHla"}],"key":"oReaFtRVlE"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"yUnfeKQ26v"},{"type":"outputs","id":"D9h18anRU1Kvae-rbnULV","children":[],"key":"aP71fKmn10"}],"key":"sedojBU4Wb"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"iDUFWuFY6Y"},{"type":"outputs","id":"Wk