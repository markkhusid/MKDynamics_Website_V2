 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"duUB9GE8pB"}],"key":"fpMtcG5BFh"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"YTJqHhB4Fr"}],"key":"AGcdbxWs3R"}],"key":"uRayJ0JWDV"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"jxEZO3FOAD"},{"type":"outputs","id":"0u1TPUXtMbV8ERBB7EqTu","children":[],"key":"N7IG4pg1Mt"}],"key":"GnpHb7wo1C"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"C8cMselO0h"},{"type":"outputs","id":"fQyRbdecxxuVq6CMdlYC2","children":[],"key":"rEXHwz2ZEu"}],"key":"zCPgZY20v9"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"WD6BMrw6DP"},{"type":"outputs","id":"o20tvcsjy0btKGrkuiFhR","children":[],"key":"R94vDSIW6m"}],"key":"sBYjuwF9nG"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"XmIoKAJyiC"},{"type":"outputs","id":"eV