 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"p1p6f7f619"}],"key":"tdfsvb1Jun"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"s6gnqQXEWJ"}],"key":"gG4e2rvrPh"}],"key":"OmPpw9ZT4B"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"XMGXnFkaon"},{"type":"outputs","id":"XJFru8U1AmJHtl0WEWnFD","children":[],"key":"kHuwbJaZLN"}],"key":"CUejJVwRJs"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"YQAaW9o9SH"},{"type":"outputs","id":"BoFGiWMETRVWb-BP6eNcU","children":[],"key":"IbdNELK4vj"}],"key":"nLt6FIN655"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"qOFyVxr1tP"},{"type":"outputs","id":"52rcHe6LmLFWG079AxBzQ","children":[],"key":"D11MQXgRZu"}],"key":"i0TS0JSlGj"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"J77x5Md663"},{"type":"outputs","id":"lt