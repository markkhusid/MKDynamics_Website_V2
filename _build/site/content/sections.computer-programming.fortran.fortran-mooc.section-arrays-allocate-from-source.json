 allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"bplzAWn5Qm"}],"key":"GoniWMfBZ2"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"dNAMDhN8Oz"}],"key":"RE0tWj9jla"}],"key":"x0GjoePSWn"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"icgAHwglKl"},{"type":"outputs","id":"MtfDKRMg4GxyM19cs3Tmh","children":[],"key":"rbgk7sdSzK"}],"key":"pFNFyRRLgD"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"QbH4OmUILv"},{"type":"outputs","id":"St6S8WWIvW2kYduAJN1lg","children":[],"key":"ls8ZmTFeuj"}],"key":"fSKq09WosJ"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"e6juq3QD4p"},{"type":"outputs","id":"KWTqPvIWd4qs68ZFJMOeK","children":[],"key":"aV3LWDJGF7"}],"key":"xRsmE0yMq1"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"FDrsKRLKAb"},{"type":"outputs","id":"kH