\n    A = eye(n)\n    do i = 1, size(A, 1)\n        print *, A(i, :)\n    end do\n    deallocate(A)\n\ncontains\n\n    function get_size() result(n)\n        use, intrinsic :: iso_fortran_env, only : error_unit\n        implicit none\n        integer :: n\n        integer :: istat\n        character(len=1024) :: buffer, msg\n\n        if (command_argument_count() /= 1) then\n            write (unit=error_unit, fmt='(A)') &\n                'error: expecting an integer argument, size of array'\n            stop 1\n        end if\n        call get_command_argument(1, buffer)\n        read (buffer, fmt=*, iostat=istat, iomsg=msg) n\n        if (istat /= 0) then\n            write (unit=error_unit, fmt='(2A)') &\n                'error: ', msg\n            stop 2\n        end if\n    end function get_size\n\n    function eye(n) result(matrix)\n        implicit none\n        integer, value :: n\n        real, dimension(n, n) :: matrix\n        integer :: i\n\n        matrix = 0.0\n        do i = 1, size(A, 1)\n            matrix(i, i) = 1.0\n        end do\n    end function eye\n\nend program identity","position":{"start":{"line":1,"column":1},"end":{"line":57,"column":1}},"key":"Ha0FYdJ6IE"}],"key":"ACYoJMravC"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"UcYP5zTI1m"}],"key":"o48PkCDdvg"}],"key":"gXUzTE0kCd"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Build the Program using FPM (Fortran Package Manager)","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"matBhW91BR"}],"identifier":"build-the-program-using-fpm-fort