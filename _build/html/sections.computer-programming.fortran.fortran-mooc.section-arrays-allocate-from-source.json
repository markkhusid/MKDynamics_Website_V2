)\n    allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"G6QG8nbQZ8"}],"key":"V8fOcmFV75"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"OmQYpzQBp9"}],"key":"ZLl6sgrGUj"}],"key":"oozhgmPfL5"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"KHlUtvmIkP"},{"type":"outputs","id":"-wFLtowDmSqRdgV4xARoG","children":[],"key":"WjzGBcPcMP"}],"key":"djoiLX7cC9"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"fElwHFO14q"},{"type":"outputs","id":"WIzTO2VGMGkbPSBTbLb-_","children":[],"key":"rXS0A3EOMn"}],"key":"Ad4hiyfF5H"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"YPKF1QD2ax"},{"type":"outputs","id":"6LpJFRzLVSRfXHzDIwCHB","children":[],"key":"veEGtPjP9l"}],"key":"bcckjW9aei"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"uvv7RSdjyY"},{"type":"outputs","i