)\n    allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"vsEonObXZQ"}],"key":"NAZrDpZO92"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"nRMOHkJ6mT"}],"key":"GJngA9Y5p4"}],"key":"EselXRVN7Z"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"sAtrkt3hNr"},{"type":"outputs","id":"Fe-86FGspK7SzvENSWP6L","children":[],"key":"oh5vixDOel"}],"key":"gBNHk3V1AE"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"hAeHD59Bcf"},{"type":"outputs","id":"7y2BhGp0Rp1g_acXNOlg8","children":[],"key":"NtlAE8EFvU"}],"key":"wv1xfIThYc"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"pv7lOeUqpR"},{"type":"outputs","id":"Hg-Dxq5K7xR-75Clyh0mQ","children":[],"key":"PrzfwIW4Kl"}],"key":"ZyrPF9LRPg"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"tdACfXTDug"},{"type":"outputs","i