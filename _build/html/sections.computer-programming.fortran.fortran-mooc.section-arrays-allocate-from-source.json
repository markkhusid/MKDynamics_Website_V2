)\n    allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"guycI5vi95"}],"key":"At2ryLyTy0"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"w6yMvwEQbw"}],"key":"TfTGMKRXgb"}],"key":"D93EBa21n8"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"s6QMJGXKBt"},{"type":"outputs","id":"QWMYfD6L2jX6RHN9qaB1i","children":[],"key":"cLXjx62D86"}],"key":"HZWkwFOzZJ"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"ExAb8XwelD"},{"type":"outputs","id":"s5qZPSIkO0VC-d-dEfqR6","children":[],"key":"wma0KVtdvo"}],"key":"BTlsBqDvIr"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"JSQ1GIM20y"},{"type":"outputs","id":"fbbOaQcOyqSBSivWuj2vy","children":[],"key":"EwQM3rFQHn"}],"key":"Puojb685uM"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"biqxzCayVE"},{"type":"outputs","i