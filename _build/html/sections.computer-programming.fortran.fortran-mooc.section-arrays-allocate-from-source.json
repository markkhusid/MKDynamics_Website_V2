)\n    allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"kdmI9QRBnc"}],"key":"VKR14iHMeX"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"TJ9riq3t3n"}],"key":"zCvikW59GA"}],"key":"wF5qrQPCIz"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"Ov4wboOYf3"},{"type":"outputs","id":"5E7iA5i5zmdmAaJi0RsKu","children":[],"key":"fCmnX9Zrmw"}],"key":"xpssrInPOT"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"F5pJA4Z9JX"},{"type":"outputs","id":"aNQGbupkUKSzF4ZYtu3E7","children":[],"key":"TABIB0ahYf"}],"key":"kDahnC1EIn"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"gOo5u2pE5h"},{"type":"outputs","id":"vQQRzfyNW-W68UsF_NYZ0","children":[],"key":"G5VZfIgobm"}],"key":"YmCU8TiUlx"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"aC0xnlQ7e6"},{"type":"outputs","i