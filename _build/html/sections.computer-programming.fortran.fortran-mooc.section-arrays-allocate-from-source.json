)\n    allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"Ms0GOx4ovU"}],"key":"VmDXLf6TKF"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"AqvR6LIDLi"}],"key":"uEYjnEjvP8"}],"key":"P3gzOODyJ2"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"uueDb3iEjO"},{"type":"outputs","id":"RbUMh1pnNCUh9Ll6d09-Z","children":[],"key":"WBrBCpRxsE"}],"key":"xmhecJo2zk"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"cBSiKb3hkN"},{"type":"outputs","id":"NfvU7-fs85mbpT90QUDFw","children":[],"key":"CpCd3N6EOV"}],"key":"P0y1jIDttu"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"urrjF9Hgy9"},{"type":"outputs","id":"2h1kGTRJj9nza70riZmxe","children":[],"key":"xjeUr71QCM"}],"key":"SWR4okJ24n"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"lcSBs7nJK3"},{"type":"outputs","i