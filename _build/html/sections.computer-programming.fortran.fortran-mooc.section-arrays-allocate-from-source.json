)\n    allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"v4kq3SKueP"}],"key":"aLIxg9SIg2"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"OLboTgsOyZ"}],"key":"WpVDfosZkC"}],"key":"rnamxIIQ6y"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"VvhhGNB4BZ"},{"type":"outputs","id":"RnnwEy7IQiauch8CwfgMi","children":[],"key":"NbgaHrOsug"}],"key":"lWDqXQdk0V"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"LQtQGunTTW"},{"type":"outputs","id":"n1fPTrNtvB5o_ToZtpwxa","children":[],"key":"clpALsg8FP"}],"key":"u5NaFQOYZO"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"kejpLFuSow"},{"type":"outputs","id":"Ips6tKkVtH40Lf716x8ZO","children":[],"key":"W2bSZh693f"}],"key":"RrdcO3Vs0P"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"UKs8wA0czJ"},{"type":"outputs","i