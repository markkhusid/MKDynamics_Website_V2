)\n    allocate(B, source=A, stat=status)\n    if (status /= 0) then\n        write (unit=error_unit, fmt='(A)') 'error: can not allocate array'\n        stop 1\n    end if\n    print *, 'The matrix A contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    print *\n    print *, 'The matrix B contains:'\n    do i = 1, size(A, 1)\n        print '(*(I4))', A(i, :)\n    end do\n    deallocate (B)\nend program allocate_from_source","position":{"start":{"line":1,"column":1},"end":{"line":26,"column":1}},"key":"zS3zaI1opw"}],"key":"WR7XmKFpot"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"O6JCLID0zv"}],"key":"T1mt5nWK0j"}],"key":"dpuSucErO7"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"XcqQng5Pmm"},{"type":"outputs","id":"gFQZx5yFwJ0vbk_usyxO8","children":[],"key":"i4hLiUb1Tn"}],"key":"qm8pqh2B8R"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Allocate_from_Source\"","key":"QLDwmpd8DM"},{"type":"outputs","id":"N2HQ8FTxYG-FEIAVyjwy5","children":[],"key":"GBUyYSckXm"}],"key":"kD6MVHR8Z9"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"os.chdir(code_dir)","key":"rz3PSmLBKC"},{"type":"outputs","id":"VYy5zgTu_d6wVIjVy_QRP","children":[],"key":"Hl7d6T0MIf"}],"key":"LOK3oZ6yxK"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_status = os.system(\"fpm build 2>/dev/null\")","key":"TVWJXX8A5K"},{"type":"outputs","i