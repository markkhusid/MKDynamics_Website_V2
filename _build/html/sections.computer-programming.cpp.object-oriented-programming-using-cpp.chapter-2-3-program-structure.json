ition":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"lSxSVyX8bf"}],"identifier":"program-that-demonstrates-program-structure-in-c","label":"Program that demonstrates program structure in C++","html_id":"program-that-demonstrates-program-structure-in-c","implicit":true,"key":"kxSpfnYwZV"}],"key":"X9wK8YyQgo"},{"type":"block","kind":"notebook-content","children":[{"type":"code","lang":"cpp","value":"// Greatest common divisor program.\n#include <iostream>\n#include <assert.h>\n\nint gcd(int m, int n)   // function declartion\n{                       // block\n    int r;              // declaration of remainder\n\n    while (n != 0) {    // not equal\n        r = m % n;      // modulo operator\n        m = n;          // assignment\n        n = r;\n    }                   // end while loop\n\n    return m;           // exit gcd with value m\n}\n\nint main()\n{\n    int x, y, g;\n\n    std::cout << \"\\nProgram GCD C++\";\n    do {\n        std::cout << \"\\nEnter two integers: \";\n        std::cin >> x >> y;\n        assert(x * y != 0); // precondition on GCD\n        std::cout << \"\\nGCD(\" << x << \", \" << y << \") = \"\n             << (g = gcd(x, y)) << std::endl;\n        assert(x % g == 0 && y % g ==0); // postcondition\n    } while (x != y);\n}","key":"MEhP5xAWVV"}],"key":"Y41pG3tYnj"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Compile and Execute the Program","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"wCM0ewT1WF"}],"identifier":"compile-and-execute-the-program","label":"Compile and Execute the Program","html_id":"compile-and-execute-the-program","implicit":true,"key":"li3gvCJUoD"}],"key":"zPupykGvdm"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Gnu Compiler Collection (g++):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"Y8iHwvhsG9"}],"key":"mgdXAmbyvB"}],"key":"XxfeBIq2yd"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"EIUr7cFoON"},{"type":"outputs","id":"SO0S40T2V7XuxTQoY4xM9","children":[],"key":"QcA9mVXJaV"}],"key":"yupkVFWGRe"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Cpp_Code/Chapter_2_3_Program_Stucture\"","key":"Gh9XgaJy2G"},{"type":"outputs","id":"Ovcm4QF5QFB3sbAYfnKnk","children":[],"key":"iWj3bujKVk"}],"key":"pCuZo8xtqF"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"ch_dir_stat = os.chdir(code_dir)","key":"fjdN4n1HJj"},{"type":"outputs","id":"z4ooywX21hdufrQoNAkqF","children":[],"key":"l5rWD1ucUI"}],"key":"rZKJ4denzt"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"build_command = os.system(\"g++ gcd.cpp -w -o gcd\")","key":"fom7XMoPvS"},{"type":"outputs","id":"nS9tbanmgxccYmhOIh0Kl","children":[],"key":"sxfUM3xN0E"}],"key":"gPrpDx30td"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"exec_status = os.system(\"echo \\\"20 10 50 4 60 30 100 100\\\" | ./gcd\")","key":"AzGGmqUegC"},{"type":"outputs","id":"JuCkQKJGU-SlZLs-Vt_la","children":[{"type":"output","jupyter_data":{"name":"stdout","output_type":"stream","text":"\nProgram GCD C++\nEnter two integers: \nGCD(20, 10) = 10\n\nEnter two integers: \nGCD(50, 4) = 2\n\nEnter two integers: \nGCD(60, 30) = 30\n\nEnter two integers: \nGCD(100, 100) = 100\n"},"children":[],"key":"YpDVJ6202S"}],"key":"RlVtchFKiq"}],"key":"Q682qxPCZw"}],"key":"DbIQl3gOA4"},"references":{"cite":