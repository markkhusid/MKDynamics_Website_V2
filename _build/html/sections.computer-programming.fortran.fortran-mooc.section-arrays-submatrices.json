           \n  \n  print *, \"A_array contains: \", A_array\n\n  print *, \"A matrix contains: \"\n  \n  do i = 1, size(A, 1)\n    print *, A(i, :)\n  end do\n\n  print *\n  print *, \"Row 2 contains: \"\n  print *, A(2, :)\n  print *, \"Column 3 contains: \"\n  print *, A(:, 3)\n  print '(A, I0)', 'rank = ', rank(A(2, :))\n  print '(A, I0)', 'shape = ', shape(A(2, :))\nend program submatrices","position":{"start":{"line":1,"column":1},"end":{"line":34,"column":1}},"key":"LBesGYsvGm"}],"key":"HAKYH6FIZu"},{"type":"block","kind":"notebook-content","children":[{"type":"paragraph","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"The above program is compiled and run using Fortran Package Manager (fpm):","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"wJuXYfpvmf"}],"key":"I9sS6noQ3M"}],"key":"Ds2e6uCoc7"},{"type":"block","kind":"notebook-content","children":[{"type":"heading","depth":2,"position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"children":[{"type":"text","value":"Build the Program using FPM (Fortran Package Manager)","position":{"start":{"line":1,"column":1},"end":{"line":1,"column":1}},"key":"SKCNEkZA4j"}],"identifier":"build-the-program-using-fpm-fortran-package-manager","label":"Build the Program using FPM (Fortran Package Manager)","html_id":"build-the-program-using-fpm-fortran-package-manager","implicit":true,"key":"bTniIeI8pf"}],"key":"rTtn6AWnLC"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"import os\nroot_dir = os.getcwd()","key":"i5bWIIZONW"},{"type":"outputs","id":"CkRe5ZH4W5RiTV0ycDpSv","children":[],"key":"WjGcIBjdVu"}],"key":"iJ65rU0l9w"},{"type":"block","kind":"notebook-code","children":[{"type":"code","lang":"python","executable":true,"value":"code_dir = root_dir + \"/\" + \"Fortran_Code/Section_Arrays_Submatrices\"","key":"S8QOoea43w"},{"type":"outputs","id":"CKuNOrqaR9OTTNyvk